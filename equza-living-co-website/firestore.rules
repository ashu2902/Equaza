rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Simplified rules: Read access for all, full access for admins
    match /{document=**} {
      allow read: if true; // Public read access for all documents
      allow write, update, delete, create: if isAdmin(); // Full access for admins
    }
    
    // Special case: Allow anonymous users to create leads
    match /leads/{document} {
      allow create: if true; // Allow anonymous lead creation from forms
      allow read: if true; // Public read access
      allow write, update, delete: if isAdmin(); // Admin full access
    }
    
    // Helper function to check admin permissions
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
  }
}